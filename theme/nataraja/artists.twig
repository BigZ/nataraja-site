{% include '_header.twig' %}

    <!-- Main Blog Content -->
<section class="section section-white">
    <div class="container-fluid">
        <h1 class="sectionTitle">Nataraja artists</h1>
        <div class="col-md-8 col-md-offset-2">
            <div class="row">
                <div class="col-md-12">
                    <div class="row section-head">
                        <div class="col-md-6 text-left">
                            <h3>Live acts</h3>
                        </div>
                        <div class="col-md-6 text-right">
                            <p>Select one.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="row releases-wrap">
                        {% for record in records if record.type == "Live" %}
                            <div class="col-md-4{% if loop.index > 3 %} margin-top-big{% endif %}">
                                <a href="{{ record.link }}">
                                    <a href="{{ record.link }}" class="recordTitle">{{ record.title }}</a>
                                    <img src="{{ thumbnail(record.image, 400, 260) }}">
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-md-12 margin-top-big">
                    <div class="row section-head">
                        <div class="col-md-6 text-left">
                            <h3>DJ's</h3>
                        </div>
                        <div class="col-md-6 text-right">
                            <p>Select one.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="row releases-wrap">
                        {% for record in records %}
                        {% if record.type != "Live" %}
                            <div class="col-md-4{% if loop.index > 3 %}  margin-top-big{% endif %}">
                                <a href="{{ record.link }}">
                                    {{ record.title }}
                                    <img src="{{ thumbnail(record.image, 400, 260) }}">
                                </a>
                            </div>
                        {% endif %}
                        {% endfor %}
                    </div>
                </div>
                {# If there are more records than will fit on one page, the pager is shown. #}
                {{ pager() }}
            </div>
        </div>
    </div>
</section>

    <!-- End Main Content -->

{% include '_footer.twig' %}
